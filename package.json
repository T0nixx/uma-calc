{
  "private": true,
  "scripts": {
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|json|css)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "build": "yarn workspaces foreach -pt run build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.2.1"
}
